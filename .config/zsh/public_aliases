# git shortcuts
alias \
    g="git"\
    gs="git status"\
    ga="git add"\
    gc="git commit"\
    gr="git rm"\
    gp="git pull"\
    gpo="git pull origin"

# shorten commands
alias \
    v="nvim"\
    vi="nvim"\
    z="zathura"\
    lock="xdg-screensaver lock"\
    open="xdg-open"

# reboot sequence
alias rbsq="sudo dnf upgrade -y && systemctl reboot -i --force"

# colorize when possible
alias \
	ls="ls --color=auto --group-directories-first" \
	grep="grep --color=auto" \
	diff="diff --color=auto"
